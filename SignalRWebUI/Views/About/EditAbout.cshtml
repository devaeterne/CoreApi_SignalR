@model UpdateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-md-12">
    <form method="post">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Add About</div>
            </div>
            <input type="hidden" asp-for="AboutID" />
            <div class="card-body">
                <div class="form-group">
                    <label for="categoryName">Title</label>
                    <input type="text" class="form-control input-square" asp-for="Title" id="categoryName"
                        placeholder="Category Name">
                </div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="categoryName">Company Image</label>
                    <input type="text" class="form-control input-square" asp-for="ImageURL" id="categoryName"
                        placeholder="Category Name">
                </div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="categoryName">Description</label>
                    <textarea class="form-control" asp-for="Description" id="comment" rows="5"></textarea>
                </div>
            </div>
            <div class="card-action">
                <button class="btn btn-success">Submit</button>
            </div>
        </div>
    </form>
</div>